<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">All Events</h1>
  <% if current_user&.organizer? %>
    <%= link_to "Create New Event", new_event_path, class: "btn btn-success" %>
  <% end %>
</div>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= link_to event.title, event_path(event), class: "text-decoration-none" %></h5>
          <p class="card-text text-muted">
            <%= event.start_date.strftime("%b %d, %Y") %> to <%= event.end_date.strftime("%b %d, %Y") %>
          </p>
          <%= link_to "View Details", event_path(event), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
